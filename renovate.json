{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>gr4vy/renovate-config:python"],
  "constraints": {
    "python": "==3.11"
  },
  "ignorePaths": ["cloudbuild/**", ".devcontainer/**", "docker-compose.yaml", "Dockerfile"],
  "packageRules": [
    {
      "matchFileNames": ["**/*"],
      "semanticCommitScope": "{{ depType }}",
      "semanticCommitType": "build({{#if (containsString packageFileDir 'packages')}}{{{replace '.*[\/]([^/]+$)' '$1'}}{{else}}monorepo{{/if}})"
    }
  ]
}
